---
import "../styles/global.css";
import SpotCard from "../components/SpotCard.astro";
import spots from "../data/spots.json";
---

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <title>ロケ地一覧 | 函館旅フォトブック 〜まいきゃっち!!〜</title>
  </head>
  <body class="bg-gray-50 text-gray-800 font-sans">
    <header class="text-center py-6 bg-indigo-100 shadow">
      <h1 class="text-2xl font-bold text-indigo-700">ロケ地一覧</h1>
    </header>

    <main class="max-w-5xl mx-auto p-6 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {spots.map((spot) => (
        <SpotCard {...spot} />
      ))}
    </main>

    <footer class="text-center py-4 text-sm text-gray-500 border-t border-gray-200">
      © 2025 my-hakodate-map
    </footer>
  </body>
</html>
