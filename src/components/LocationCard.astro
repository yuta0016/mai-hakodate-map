---
const { location } = Astro.props;
---
<a href={`/locations/${location.slug}`} class="block bg-white rounded-2xl shadow hover:shadow-lg transition p-4">
  <img src={location.image} alt={location.name} class="rounded-xl mb-2 w-full h-48 object-cover" />
  <h2 class="text-lg font-semibold text-gray-800">{location.name}</h2>
  <p class="text-sm text-gray-600">{location.description}</p>
</a>
